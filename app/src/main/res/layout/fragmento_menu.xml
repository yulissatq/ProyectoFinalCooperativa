<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.FragmentoMenu">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_consultaCuenta"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_desactivar"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/card_retiro"
            android:layout_toRightOf="@+id/card_retiro"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            tools:ignore="UnknownId">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_desactivar"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_cuenta"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_action_buscar" />

                <TextView
                    android:id="@+id/lbl_cuenta"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginBottom="9dp"
                    android:text="Buscar Cuenta"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_crearUser"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="31dp"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_crearUser"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_crearUser"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_action_crear" />

                <TextView
                    android:id="@+id/lbl_crear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="7dp"
                    android:text="Crear Cliente"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_buscarCliente"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/card_crearUser"
            android:layout_toRightOf="@+id/card_crearUser"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_crearUser"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_buscarUser"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_action_buscar" />

                <TextView
                    android:id="@+id/lbl_buscarUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="7dp"
                    android:text="Buscar Cliente"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_buscarTodosClientes"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_crearUser"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_crearUser"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_buscarTodo"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_action_listar" />

                <TextView
                    android:id="@+id/lbl_buscarTodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Listar Clientes"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_modificar"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_buscarCliente"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/card_buscarTodosClientes"
            android:layout_toRightOf="@+id/card_buscarTodosClientes"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            tools:ignore="UnknownId">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_crearUser"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_modificarCliente"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_action_modificar" />

                <TextView
                    android:id="@+id/lbl_modificarCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="6dp"
                    android:text="Modificar Cliente"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_desactivar"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_buscarTodosClientes"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            tools:ignore="UnknownId">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_desactivar"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_desactivar"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_action_desactivar" />

                <TextView
                    android:id="@+id/lbl_desactivar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginBottom="8dp"
                    android:text="Desactivar Cuenta"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_deposito"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_modificar"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/card_desactivar"
            android:layout_toRightOf="@+id/card_desactivar"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            tools:ignore="UnknownId">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_desactivar"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_deposito"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_action_depositar" />

                <TextView
                    android:id="@+id/lbl_deposito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="11dp"
                    android:text="Depositar"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_retiro"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_desactivar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            tools:ignore="UnknownId">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_desactivar"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_retiro"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_action_retirar" />

                <TextView
                    android:id="@+id/lbl_retiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="9dp"
                    android:text="Retirar"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_transferencia"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_retiro"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            tools:ignore="UnknownId">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/card_transferencia"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_transferencia"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_action_transferencia" />

                <TextView
                    android:id="@+id/lbl_transferencia"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="8dp"
                    android:text="Transferencia"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_cerrarSesion"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_below="@+id/card_desactivar"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="138dp"
            android:layout_toEndOf="@+id/card_retiro"
            android:layout_toRightOf="@+id/card_retiro"
            android:background="@color/colorPrimaryDark"
            app:cardCornerRadius="12dp"
            tools:ignore="UnknownId">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/card_cerrarSesion"
                android:layout_alignTop="@+id/card_cerrarSesion"
                android:background="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/img_cerrar"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_action_cerrar" />

                <TextView
                    android:id="@+id/lbl_cerrar"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginBottom="9dp"
                    android:text="Cerrar Sesion"
                    android:textSize="16sp"
                    android:textStyle="bold|italic"
                    app:fontFamily="sans-serif-condensed" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>